<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/StyleHeader.css" />
</head>

<body>
    <header class="header">
        <div class="miContainer logo-nav-container">
            <a href="/Home/Index" class="logo"><img class="logo" title="Book Shop" style="width:100px;height:75px" src="~/img/logo.png" /></a>
            <nav class="navigation">
                <ul>
                    <li>
                        <a href="/Home/Index">
                            <img class="miImg" title="Catalogo" src="~/img/imgBook.jpg" />
                            <label>CATALOGO</label>
                        </a>
                    </li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a href="/Home/Carrito">
                                <img class="miImg" title="Carrito" src="~/img/imgCarrito.png" />
                                <label>CARRITO</label>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("admin"))
                    {
                        <li>
                            <a href="/Home/Admin">
                                <img class="miImg" title="Admin" src="~/img/imgAdmin.png" />
                                <label>ADMINISTRADOR</label>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
                    @Html.Partial("_LoginPartial")
        </div>
    </header>

    <div class="container body-content">
        @RenderBody()
        @*<hr />*@
        @*<footer>
                <p>&copy; @DateTime.Now.Year - Mi aplicación ASP.NET / Francisco Javier Delgado Romero</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
